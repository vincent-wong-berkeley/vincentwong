### PRIME STARS
arr = np.array([
    [2, 3, 5],
    [14, 6, 8],
    [11, 13, 17],
    [7, 10, 13]
])

def prime_row_array(matrix):
    prime_mask = []
    for row in matrix:
        for val in row:
            if (val % 2 == 0) or (val % 3 == 0):
                prime_bool = False
            else:
                prime_bool = True
        prime_mask.append(prime_bool)
    prime_matrix = matrix[prime_mask]
    return prime_matrix
    




print(prime_row_array(arr))


